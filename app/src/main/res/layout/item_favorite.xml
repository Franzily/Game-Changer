<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/dead_island2" />

        <TextView
            android:id="@+id/game_name_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="dead island" />

        <TextView
            android:id="@+id/game_date_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="21.04.2023" />

        <ImageButton
            android:id="@+id/imageButton_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#00FFF2F2"
            android:src="@drawable/baseline_star_border_24" />
    </androidx.cardview.widget.CardView>

</com.google.android.material.card.MaterialCardView>